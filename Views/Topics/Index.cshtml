@model IEnumerable<BeReadyForExam.Models.Topic>

<h2 class="mb-4">Topics</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Create Topic</a>
 <a class="btn btn-primary mb-3" asp-controller="Question" asp-action="Index">Questions</a>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Subject</th>
            <th style="width:180px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Name</td>
            <td>@item.Subject?.Name</td>
                <td>@item.IsActive</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>